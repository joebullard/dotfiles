" vim 
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set showcmd
set number
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set formatoptions=c,q,r,t
set ruler
set background=dark
set mouse=v
set encoding=utf-8
set title
let g:tex_flavor='latex'
let g:loaded_matchparen=1
set cpoptions+=$
set nocursorline
set background=dark
syntax enable
filetype plugin indent on
colorscheme desert
map ; :
imap <C-]> <esc>
